extends layout

block Subject
	title= L("title")
	
block CSS
	link(rel="stylesheet", href=DOMAIN+"/css/in_game_kkutu.css")
	script(async,src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js")
	script.
		(adsbygoogle = window.adsbygoogle || []).push({google_ad_client: "ca-pub-8808100690139777",enable_page_level_ads:true});

block Middle
	#kkuko-portal
		.kkutko-portal-leftpannel
			.mainlogo
				span#logotoptext 글자로 놀자! 끄투 온라인!
				img#logo(src=DOMAIN+"/img/main/logo.png")
			button#game-start
			#kkuko-status
				span#kkuko-status-players &#9660; 총 0명 접속
				span#kkuko-status-refresh &#8635; 새로고침
			#server-list
				.server-item
				.server-item
				.server-item
				.server-item
				.server-item
				.server-item
				.server-item
		.kkutko-portal-rightpannel
			.slidePanel.Panel
				img.slideImage(src=DOMAIN+"/img/main/slide/newmain.png")
				img.slideImage(src=DOMAIN+"/img/main/slide/cafe.png", url="/cafe")
				.slideImage-List
			.kkutko-portal-subleftpannel
				.noticePanel.Panel
					.panelHead
						.panelTitle 공지사항
						.panelSubTitle Notice
				.updatePanel.Panel
					.panelHead
						.panelTitle 업데이트 내역
						.panelSubTitle Update history
					iframe.bulletinPanel(src="/kkutu_bulletin.html")
			.kkutko-portal-subrightpannel
				.warpPanel.Panel
					.panelHead
						.panelTitle 끄투코리아와 더욱 친해져요!
					.warpList
						a(href="/cafe", target="_blank")
							.warpContent 
								img(src="/img/main/cafe.png")
								span 공식카페
						a(href="/facebook", target="_blank")
							.warpContent 
								img(src="/img/main/facebook.png")
								span 페이스북
						a(href="/youtube", target="_blank")
							.warpContent 
								img(src="/img/main/youtube.png")
								span 유튜브
						a(href="/discord", target="_blank")
							.warpContent 
								img(src="/img/main/discord.png")
								span 디스코드
						a(href="#", target="_blank")
							.warpContent 커밍순
				.youtubePanel.Panel
					iframe(width="360", height="195", src="https://www.youtube.com/embed/DO2GK4f8qp0", frameborder="0", gesture="media", allow="encrypted-media")
				a(href="http://cafe.naver.com/swiftnode", target="_blank")
					img.banner(src=DOMAIN+"/img/banner/swiftnode.png")
				a(href="#", target="_blank")
					img.banner(src=DOMAIN+"/img/banner/preparing.png")
		+separator(10)
		+Product("AD")
			script(async,src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js")
			ins.adsbygoogle(style="display:inline-block;width:728px;height:90px",data-ad-client="ca-pub-8383440458165932",data-ad-slot="5750994802")
			script.
				(adsbygoogle = window.adsbygoogle || []).push({});
