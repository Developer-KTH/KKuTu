extends m_layout

block Subject
	title= L('title')

block CSS
	link(rel='stylesheet', href=DOMAIN+'/css/in_game_kkutu.css')
	link(rel='stylesheet', href=DOMAIN+'/css/in_portal_old.css')

block JS
	script(type='text/javascript', src='/js/in_portal_old.min.js')
	if PUBLIC && false
		script(async, src='//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js')
		script (adsbygoogle = window.adsbygoogle || []).push({google_ad_client: "ca-pub-3784210391085906", enable_page_level_ads: true});

block Middle
	+separator(5)
	div(style='margin-left: calc(50% - 170px);')
		div(style='float: left; padding-left: 70px;')
			h3#holder= L('title')
			img#logo(src=DOMAIN+'/img/kkutu/short_logo.png')
		div.jjoriping(style='margin-top: 10px;')
			img.jjoObj.jjoEyeL(src=DOMAIN+'/img/jjoeyeL.png', style='top: 51px; left: -270px;')
			img.jjoObj.jjoNose(src=DOMAIN+'/img/jjonose.png', style='top: 63px; left: -170px;')
			img.jjoObj.jjoEyeR(src=DOMAIN+'/img/jjoeyeR.png', style='top: 51px; left: -70px;')
			div.jjoDisplayBar(style='float: left; margin-top: -30px; width: 325px; height: 85px;')
				button#game-start.jjo-display= L('gameStart')
	div#menu-bar(style='float: left; margin: 10px 0px 10px calc(50% - 136px); width: 100%;')
		a(target='_blank', href='//cafe.naver.com/kkutukorea', style='background-color: #dc4064;') 공식카페
		a(target='_blank', href='/discord', style='background-color: #7289DA;')= L('DISCORD')
		a(target='_blank', href='/facebook', style='background-color: #3b5998;')= L('FACEBOOK')
	div(style='float: left; margin-left: calc(50% - 160px);')
		div.server-list-box
			h3.server-list-title
				a#server-refresh
					+FA('refresh')
					+Expl(L('serverRefresh'))
				label= L('serverList')
				label#server-total(style='color: #AAA; font-size: 13px;')
			div#server-list
	div(style='float: left; width: calc(100% - 4px); border: 2px solid #CCC; margin-top: 10px; background-color: rgba(0,0,0,0.5);')
		iframe#kkutu-bulletin(width='100%', height='400px', src='/kkutu_bulletin.html')
	+separator(10)
	+Product("AD")
		script(async,src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js")
		ins.adsbygoogle(style="display:inline-block;width:320px;height:100px",data-ad-client="ca-pub-8383440458165932",data-ad-slot="3081534503")
		script.
			(adsbygoogle = window.adsbygoogle || []).push({});
