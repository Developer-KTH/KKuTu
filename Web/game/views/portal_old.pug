extends layout

block Subject
	title= L('title')
	
block CSS
	link(rel='stylesheet', href=SUB+'kkutu.co.kr/css/in_game_kkutu.css')

block Middle
	+separator(5)
	div(style='float: left; width: 100%;')
		div(style='float: left; padding-left: 70px;')
			h3#holder= L('title').replace(/\[.+?\]/g, "")
			img#logo(src=SUB+'kkutu.co.kr/img/kkutu/short_logo.png')
		div#menu-bar(style='float: right; margin-top: 25px;')
			a(target='_blank', href="/cafe", style='background-color: #ff167e;') 공식카페
			a(target='_blank', href='/facebook', style='background-color: #3b5998;') 페이스북
			a(target='_blank', href='/discord', style='background-color: #7289DA;') 디스코드
		div.jjoriping(style='margin-top: 40px;')
			img.jjoObj.jjoEyeL(src=SUB+'kkutu.co.kr/img/jjoeyeL.png', style='left: -270px;')
			img.jjoObj.jjoNose(src=SUB+'kkutu.co.kr/img/jjonose.png', style='left: -170px;')
			img.jjoObj.jjoEyeR(src=SUB+'kkutu.co.kr/img/jjoeyeR.png', style='left: -70px;')
			div.jjoDisplayBar(style='width: 325px; height: 85px;')
				button#game-start.jjo-display= L('gameStart')
	div(style='float: right; margin-top: -120px; width: 50%;')
		div.server-list-box
			h3.server-list-title
				a#server-refresh
					+FA('refresh')
					+Expl(L('serverRefresh'))
				label= L('serverList')
				label#server-total(style='color: #AAA; font-size: 13px;')
			div#server-list
	div(style='float: left; width: calc(100% - 4px); border: 2px solid #CCC; margin-top: 10px; background-color: aliceblue;border: 1px solid #fff;border-radius: 5px;')
		iframe#kkutu-bulletin(width='100%', height='400px', src='/kkutu_bulletin.html')
	+separator(10)
	+Product('AD')
		script(async,src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js")
		ins.adsbygoogle(style="display:inline-block;width:728px;height:90px",data-ad-client="ca-pub-8383440458165932",data-ad-slot="5750994802")
		script.
			(adsbygoogle = window.adsbygoogle || []).push({});
